page{
  height: 100%;
  background-color: #f3f0f1;
}
.contain{
  height: 100%;
  padding: 20rpx 0;
}
.contain > view {
   padding: 10rpx 20rpx 10rpx 20rpx;
   background-color: #fff;
   display: flex;
   margin-bottom: 20rpx;
}
.contain > view > view {
   display: flex;
   flex-direction: column;
  justify-content: space-between;
}

.product {
  position: relative;
}

.product .img{
  width: 270rpx;
  height: 270rpx;
  position: relative;
}
.hot{
  width: 24rpx;
  height: 28rpx;
  margin-right: 12rpx;
}
.number{
  font-size:26rpx;
  color:rgba(225,2,129,1);
  line-height:26rpx;
  margin-top: 26rpx;
  margin-bottom: 33rpx;
}
.msg{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.title{
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.detail{
  margin-bottom: 23rpx;
}
.detail > text:nth-of-type(1){
  font-size:26rpx;
  color:rgba(225,2,129,1);
  line-height:26rpx;
  margin-right: 20rpx;
}
.detail > image{
  width: 16rpx;
  height: 24rpx;
  margin-right: 7rpx;
}
.detail > text:nth-of-type(2){
  font-size:40rpx;
  font-weight:bold;
  color:rgba(225,2,129,1);
  line-height:26rpx;
}
.price{
  font-size:22rpx;
  color:rgba(153,153,153,1);
  line-height:26rpx;
  margin-bottom: 20rpx;
}
.product{
  margin-right: 20rpx;
}
.icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 70rpx;
}
.btn{
  position: absolute;
  height:64rpx;
  background:linear-gradient(90deg,rgba(225,2,129,1) 0%,rgba(238,37,63,1) 100%);
  border-radius:32rpx;
  right: 0;
  color: #fff;
  font-size:28rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 17rpx;
  line-height: 64rpx;
}
.ps{
  position: relative;
}
.btn image{
  width: 14rpx;
  height: 24rpx;
  display: inline-block;
  margin-left: 9rpx;
}
.product_text{
  width: 100%;
  padding-top: 7rpx;
}
.product_text .title{
  height: 76rpx;
}