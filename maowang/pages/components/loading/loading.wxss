.max-con{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: transparent;
  z-index: 999999;
  top: 0;
  left: 0;
}
.modal{
  position: absolute;
  left: 50%;
  top: 50%;
  min-width:300rpx;
  height:200rpx;
  background:rgba(0,0,0,1);
  box-shadow:0px 0px 24px 6px rgba(0, 0, 0, 0.4);
  opacity:0.8;
  border-radius:8px;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 60rpx;
  padding-right: 60rpx; 
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height:40rpx;
}
.btm{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
image{
  margin: 0 auto;
}
.text{
  line-height: 40rpx;
}